{
  "name": "example/wordpress-mcp-ability-plugin",
  "description": "WordPress MCP Ability Suite - Provides MCP tools, resources, and prompts for WordPress content operations with SaaS authentication support.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "mcp",
    "model-context-protocol",
    "ai",
    "abilities-api",
    "saas"
  ],
  "require": {
    "php": "^8.1",
    "wordpress/abilities-api": "^0.4 || ^0.5",
    "wordpress/mcp-adapter": "^0.4",
    "automattic/jetpack-autoloader": "^5.0"
  },
  "autoload": {
    "classmap": [
      "includes/saas-auth/"
    ]
  },
  "config": {
    "allow-plugins": {
      "automattic/jetpack-autoloader": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "scripts": {
    "lint": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;",
    "analyse": "vendor/bin/phpstan analyse",
    "check": [
      "@lint",
      "@analyse"
    ],
    "post-install-cmd": [
      "@composer dump-autoload"
    ],
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": [
        "wordpress/abilities-api",
        "wordpress/mcp-adapter"
      ]
    }
  }
}
